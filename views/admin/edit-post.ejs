<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Post</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('../partials/adminNavPartial.ejs') %>
    <div class="container">
      <a href="/dashboard">&larr; Back</a>
      <div class="admin-title">
        <h2>View / Edit Post</h2>

        <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn">Delete</button>
        </form>
      </div>

      <form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" class="edit-new-post">
        <label for="title"><b>Title: </b></label>
        <input type="text" name="title" id="title" placeholder="Post Title" />

        <label for="body">Content: </label>
        <textarea name="body" id="" rows="10" cols="50"></textarea>

        <button type="submit" class="btn">Update</button>
      </form>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script src="js/script.js"></script>
  </body>
</html>
